{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^subactions/.*?/action\\.yml$"]
      "matchStrings": [
        "uses:\\s+(?<dep>[^\\s@]+)@(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "{{dep}}"
    }
  ]
}
